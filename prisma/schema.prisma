generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Period {
  id    Int     @id @default(autoincrement())
  grade Grade[]
}

model Grade {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  Period      Period  @relation(fields: [periodId], references: [id])
  periodId    Int
  Teacher     Teacher @relation(fields: [teacherId], references: [id])
  teacherId   Int

  @@index([periodId])
  @@index([teacherId])
}

model Teacher {
  id    Int     @id @default(autoincrement())
  name  String
  grade Grade[]
}
